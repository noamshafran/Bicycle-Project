<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".OptionMenu">

    <RelativeLayout

        android:layout_width="354dp"
        android:layout_height="594dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp"
        tools:ignore="MissingConstraints">


        <CheckBox
            android:id="@+id/checkBox_Spa"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/checkBox_restaurant"
            android:layout_below="@+id/checkBox_bar"
            android:drawablePadding="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleX="1"
            android:scaleY="1"
            android:textColor="@android:color/background_light"
            android:buttonTint="#75a6fb"
            android:text="Spa"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="153dp" />

        <CheckBox
            android:id="@+id/checkBox_restaurant"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/checkBox_shopping"
            android:layout_marginLeft="10dp"
            android:drawablePadding="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Restaurants and Cafe"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/background_light"
            android:buttonTint="#75a6fb"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="153dp" />


        <CheckBox
            android:id="@+id/checkBox_bar"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox_restaurant"
            android:layout_marginLeft="10dp"
            android:drawablePadding="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Bars"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#75a6fb"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="153dp" />

        <CheckBox
            android:id="@+id/checkBox_movie"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox_Museums"
            android:layout_marginLeft="10dp"
            android:drawablePadding="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleX="1"
            android:scaleY="1"
            android:textColor="@android:color/background_light"
            android:buttonTint="#75a6fb"
            android:text="Movie Theaters"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="153dp" />

        <CheckBox
            android:id="@+id/checkBox_shopping"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox_movie"
            android:layout_marginLeft="10dp"
            android:drawablePadding="30dp"
            android:textColor="@android:color/background_light"
            android:buttonTint="#75a6fb"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Shopping Malls"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="200dp" />

        <CheckBox
            android:id="@+id/checkBox_Museums"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/background_light"
            android:buttonTint="#75a6fb"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="123dp"
            android:drawablePadding="30dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleX="1"
            android:scaleY="1"
            android:text="Museums and Art Galleries"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:background="#75a6fb"
            android:onClick="Start_Clicked"
            android:text="Start"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="363dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="294dp"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/background_light"
            android:text="Choose your route:"
            android:textAppearance="@style/TextAppearance.AppCompat.Tooltip"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>